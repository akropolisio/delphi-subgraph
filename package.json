{
  "name": "delphi",
  "license": "UNLICENSED",
  "scripts": {
    "build:stable-mainnet": "TYPE=stable-mainnet yarn build",
    "build:stable-rinkeby": "TYPE=stable-rinkeby yarn build",
    "build:sandbox-mainnet": "TYPE=sandbox-mainnet yarn build",
    "build:sandbox-rinkeby": "TYPE=sandbox-rinkeby yarn build",
    "build:breaking-sandbox-mainnet": "TYPE=breaking-sandbox-mainnet yarn build",
    "build:breaking-sandbox-rinkeby": "TYPE=breaking-sandbox-rinkeby yarn build",
    "build": "yarn prepare && graph build",
    "deploy:stable-mainnet": "TYPE=stable-mainnet yarn deploy-thegraph in19farkt/delphi-stable-mainnet",
    "deploy:stable-rinkeby": "TYPE=stable-rinkeby yarn deploy-thegraph in19farkt/delphi-stable-rinkeby",
    "deploy:sandbox-mainnet": "TYPE=sandbox-mainnet yarn deploy-thegraph in19farkt/delphi-sandbox-mainnet",
    "deploy:sandbox-rinkeby": "TYPE=sandbox-rinkeby yarn deploy-thegraph in19farkt/delphi-sandbox-rinkeby",
    "deploy:breaking-sandbox-mainnet": "TYPE=breaking-sandbox-mainnet yarn deploy-thegraph in19farkt/delphi-breaking-sandbox-mainnet",
    "deploy:breaking-sandbox-rinkeby": "TYPE=breaking-sandbox-rinkeby yarn deploy-thegraph in19farkt/delphi-breaking-sandbox-rinkeby",
    "deploy-thegraph": "yarn prepare && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/",
    "prepare:stable-mainnet": "TYPE=stable-mainnet yarn prepare",
    "prepare:stable-rinkeby": "TYPE=stable-rinkeby yarn prepare",
    "prepare:sandbox-mainnet": "TYPE=sandbox-mainnet yarn prepare",
    "prepare:sandbox-rinkeby": "TYPE=sandbox-rinkeby yarn prepare",
    "prepare:breaking-sandbox-mainnet": "TYPE=breaking-sandbox-mainnet yarn prepare",
    "prepare:breaking-sandbox-rinkeby": "TYPE=breaking-sandbox-rinkeby yarn prepare",
    "prepare": "yarn prepare-manifest && yarn codegen",
    "prepare-manifest": "mustache ./config/${TYPE:-sandbox-rinkeby}.json subgraph.template.yaml > subgraph.yaml",
    "codegen": "rm -rf ./generated && graph codegen"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.18.0",
    "@graphprotocol/graph-ts": "^0.18.1"
  },
  "devDependencies": {
    "mustache": "^4.0.1"
  }
}
